<!--         select id, s.morning, s.lunch, s.diner, s.snack -->
<!--           from (select * -->
<!--           		from tb_stat) s  -->
<!--          where user_seq = #{userSeq}   -->
   
<!--    </select> -->
    
    <select id="selectMember" resultType="member">
        select id,
               name,
               pass
          from tb_user 
    </select>
    <select id="selectUserSeq" parameterType="string" resultMap="memberMap">
        select user_seq, goal_weight
          from tb_user 
         where id = #{id} 
    </select>
    <select id="selectMemberById" parameterType="string" resultMap="memberMap">
    	select *
    	  from tb_user
    	 where id = #{id}
    </select>
    
    <insert id="insertMember"  parameterType="member">
    	<selectKey resultType="int" keyProperty="userSeq" order="BEFORE">
			select s_user_no.nextval from dual 
		</selectKey>
            insert into tb_user (
            user_seq,
            id, 
            name, 
            pass, 
            email,
            age,
            user_height,
            user_weight,
            gender,
            goal_weight,
            goal_calorie,
            current_weight
        ) values (
        	#{userSeq},
            #{id}, 
            #{name}, 
            #{pass}, 
            #{email},
            #{age},
            #{userHeight},
            #{userWeight},
            #{gender},
            #{goalWeight},
            #{goalCalorie},
            #{currentWeight}
        )
    </insert>
    
        <update id="updateMember" parameterType="member">
        update tb_user
           set pass = #{pass},
           set email = #{email},
           set age = #{age},
           set user_height = #{userHeight},
           set user_height = #{goalWeight},
           set goal_weight = #{currentWeight},
           set goal_calorie = #{goalCalorie}
         where id   = #{id}  
    </update>
    
</mapper>